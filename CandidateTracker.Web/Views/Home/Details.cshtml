@model CandidateViewModel

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="well">
            <h4>Name: @Model.Candidate.FirstName @Model.Candidate.LastName</h4>
            <h4>Email: @Model.Candidate.Email</h4>
            <h4>Phone: @Model.Candidate.PhoneNumber</h4>
            <h4>Status: @Model.Candidate.Status</h4>
            <h4>Notes:</h4>
            <p>@Model.Candidate.Notes</p>
            <input id="candidateId" value="@Model.Candidate.Id" type="hidden" />
            <div id="buttons">
                <button class="btn btn-primary" id="confirm-button">Confirm</button>
                <button class="btn btn-danger" id="refuse-button">Refuse</button>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script src="/js/pending.js"></script>
}
